<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/dark_slate_gray"
    tools:context=".Activities.AddTeamActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/team_add">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:fontFamily="@font/advent_pro_bold"
                android:text="Team Name:"
                android:textColor="@color/white"
                android:textSize="32sp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:fontFamily="@font/advent_pro_bold"
                android:textColorHint="@color/white"
                android:hint="Enter Team Name"
                android:id="@+id/teamname"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="Add Team Members"
            android:fontFamily="@font/advent_pro_bold"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="42sp"/>
            <!--
        <Button
            android:layout_width="wrap_content"
            android:background="@drawable/button_green"
            android:layout_margin="20dp"
            android:textColor="#000"
            android:text="Add more members"
            android:id="@+id/add_more"
            android:padding="10dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content" />
            -->
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/teamcount_select"
                android:spinnerMode="dialog"
                android:textAlignment="center">
            </Spinner>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/team_text_view"
                android:orientation="vertical"/>

        </LinearLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirm"
            android:id="@+id/confirm_team"
            android:background="@drawable/button_green"
            android:layout_gravity="center"
            android:layout_margin="20dp"/>

    </LinearLayout>


</ScrollView>